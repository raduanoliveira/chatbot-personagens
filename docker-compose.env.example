# Configurações do Banco de Dados
DB_HOST=db
DB_PORT=3306
DB_NAME=mario_chat
DB_USER=mario
DB_PASSWORD=secret
MYSQL_ROOT_PASSWORD=rootpassword

# OpenAI API Key
OPENAI_API_KEY=sua-chave-aqui

# Frontend API URL (ajuste se necessário)
VITE_API_URL=http://localhost:7000

# Guardrails / Moderação de Conteúdo
# Habilita ou desabilita a moderação de conteúdo (true/false)
MODERATION_ENABLED=true

# Nível de moderação: strict, moderate, permissive
# - strict: Bloqueia conteúdo com threshold de toxicidade baixo (0.3)
# - moderate: Bloqueia conteúdo com threshold de toxicidade médio (0.5) - RECOMENDADO
# - permissive: Bloqueia apenas conteúdo extremamente tóxico (0.7)
MODERATION_LEVEL=moderate


